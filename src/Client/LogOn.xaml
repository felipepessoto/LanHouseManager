<Window x:Class="LanManager.Client.LogOn"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Entrar" Height="130" Width="300" Closing="Window_Closing" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Label Height="28" Margin="6,10,0,0" Name="lblUserName" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120">Nome de usuário:</Label>
        <TextBox Height="23" Margin="130,10,0,0" Name="txtUserName" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" CharacterCasing="Lower" />
        <Label Margin="6,40,0,0" Name="lblPassword" HorizontalAlignment="Left" Width="120" VerticalAlignment="Top" Height="28">Senha:</Label>
        <PasswordBox Margin="130,40,0,0" Name="txtPassword" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" Height="23" />
        <Button Height="23" HorizontalAlignment="Left" Margin="6,70,0,9" Name="btnLogOn" VerticalAlignment="Top" Width="75" Click="btnLogOn_Click" IsDefault="True">Entrar</Button>
        <RadioButton Height="16" Margin="130,70,0,0" Name="rdbCliente" VerticalAlignment="Top" HorizontalAlignment="Left" IsChecked="True">Cliente</RadioButton>
        <RadioButton Height="16" Margin="130,90,0,0" Name="rdbAdmin" VerticalAlignment="Top" HorizontalAlignment="Left">Admin</RadioButton>
    </Grid>
</Window>
