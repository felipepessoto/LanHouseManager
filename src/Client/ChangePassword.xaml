<Window x:Class="LanManager.Client.ChangePassword"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Escolha uma nova senha" Height="130" Width="300" Closing="Window_Closing" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Label Height="28" Margin="12,10,0,0" Name="label1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50">Senha:</Label>
        <Label Height="28" Margin="12,40,0,0" Name="label2" VerticalAlignment="Top" HorizontalAlignment="Left" Width="80">Confirmação:</Label>
        <PasswordBox Height="23" Margin="97,10,61,0" Name="txtPassword" VerticalAlignment="Top" MaxLength="20" />
        <PasswordBox Height="23" Margin="98,40,60,0" Name="txtConfirmPassword" VerticalAlignment="Top" MaxLength="20" />
        <Button Height="23" HorizontalAlignment="Left" Margin="17,70,0,0" Name="btnSalvar" VerticalAlignment="Top" Width="75" Click="btnSalvar_Click">Salvar</Button>
    </Grid>
</Window>
